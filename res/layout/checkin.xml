         <EditText
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:singleLine="false"
    android:lines="5"
    android:hint="@string/dish_hint"
    android:layout_marginLeft="10dip"
    android:layout_marginRight="10dip" />
    -->

</LinearLayout>